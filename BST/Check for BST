class Solution
{
    boolean fastBST(Node root,int min,int max)
    {
        if(root==null) return true;
        boolean left=fastBST(root.left,min,root.data);
        boolean right=fastBST(root.right,root.data,max);
        if(root.data<=min || root.data>=max)    return false;
        return left&right;
    }
    //Function to check whether a Binary Tree is BST or not.
    boolean isBST(Node root)
    {
        // code here.
        return fastBST(root,Integer.MIN_VALUE,Integer.MAX_VALUE);
    }
}